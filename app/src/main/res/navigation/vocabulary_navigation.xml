<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vocabulary_navigation"
    app:startDestination="@id/vocabListFragment">
    <fragment
        android:id="@+id/vocabListFragment"
        android:name="com.example.hwaa.presentation.fragment.main.vocabulary.VocabListFragment"
        android:label="fragment_vocab_list"
        tools:layout="@layout/fragment_vocab_list" >
        <action
            android:id="@+id/action_vocabListFragment_to_flashCardFragment"
            app:destination="@id/flashCardFragment" />
        <action
            android:id="@+id/action_vocabListFragment_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/flashCardFragment"
        android:name="com.example.hwaa.presentation.fragment.main.vocabulary.FlashCardFragment"
        android:label="FlashCardFragment" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.hwaa.presentation.fragment.main.vocabulary.TestFragment"
        android:label="TestFragment" />
</navigation>

